<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" >
            <Dialog id="Dialog" title="Customer Details" >
        <content>
            <List id="customer" mode="SingleSelect" selectionChange="onCustomerSelect" items="{/Customers}">
                <StandardListItem title="{CustomerID}" description="{CompanyName}" />
            </List>
        </content>
        
       
        <endButton>
            <Button text="Cancel" press="onCloseCusDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>